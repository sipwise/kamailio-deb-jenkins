# This jenkins-job-build configuration sets up Jenkins jobs
# for building Debian packages of kamcli
# NOTE: requires jenkins-job-builder >= 6.4.0

## global defaults
- defaults:
    name: global
    email: 'linuxmaniac@torreviejawireless.org'
    email_body: |-
      Check console output at ${{BUILD_URL}} to view the results.\n\n${{CHANGES}}\n -------------------------------------------------- \n ${{BUILD_LOG, maxLines=100, escapeHtml=false}}
    debian_dir: pkg/deb
    logrotate_keep: &logrotate_keep
     5
    architectures: !!python/tuple &architectures
     - amd64
    repos: &repos
      'https://github.com/kamailio/kamcli.git'
    reftag: &reftag
      '+refs/tags/*:refs/remotes/origin/tags/*'
    refbranch: &refbranch
      '+refs/heads/*:refs/remotes/origin/*'
    branch: &branch
      'refs/heads/master'
    browser_url: &browserurl
      'https://github.com/kamailio/kamcli.git'
    jobs_simple: &jobs_simple
      - '{name}-get-code'
      - '{name}-source'
      - '{name}-binaries'
      - '{name}-repos'
      - '{name}-piuparts'

## list of projects with their configurations
# build based on branches
- project:
    name: kamcli-nightly
    logrotate_keep: *logrotate_keep
    repos: *repos
    refspec: *refbranch
    branch: *branch
    browser_url: *browserurl
    distributions: !!python/tuple [trixie, bookworm, bullseye, noble, jammy, focal, bionic]
    jobs: *jobs_simple
    disabled: false

# build based on tags
- project:
    name: kamcli
    views:
      - '{name}'
    logrotate_keep: *logrotate_keep
    repos: *repos
    refspec: *reftag
    branch: ':refs/tags/v.*'
    browser_url: *browserurl
    distributions: !!python/tuple [bullseye, focal, bionic, xenial]
    jobs: *jobs_simple
    disabled: false

